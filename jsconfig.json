{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "types": [],
    "skipLibCheck": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    "**/node_modules/**",
    "dist",
    "dev-dist",
    "11dist",
    "client/src/components/ui/badge.jsx"
  ],
  "include": [
    "client/src/**/*",
    "client/**/*.config.*",
    "client/index.html",
    "server/**/*",
    "shared/**/*",
    "scripts/**/*",
    "prisma/**/*",
    "package.json"
  ]
}
