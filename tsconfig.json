{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "strict": true,
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "checkJs": false,
    "resolveJsonModule": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": [
    "src",
    "server",
    "vite.config.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dev-dist",
    "11dist",
    "src/components/ui/badge.jsx"
  ]
}
